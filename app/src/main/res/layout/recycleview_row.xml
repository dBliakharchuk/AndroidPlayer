<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycleview_row"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <ImageView
        android:id="@+id/imageOfGroup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/playInRecycleView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/imageOfGroup"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageOfGroup"
        android:text="SecondLine"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_above="@+id/secondLine"
        android:layout_alignStart="@+id/secondLine"
        android:gravity="center_vertical"
        android:text="FirstLine"
        android:textSize="16sp" />

</RelativeLayout>